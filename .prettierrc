{
    "printWidth": 80,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "tailwindStylesheet": "src/app.css",
    "tailwindFunctions": ["clsx", "cn", "tv", "twMerge"],
    "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
    "overrides": [
        { "files": "*.svelte", "options": { "parser": "svelte" } },
        {
            "files": ".github/**/*.yml",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
